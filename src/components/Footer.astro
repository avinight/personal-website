---
import { Icon } from 'astro-icon/components';
---

<footer class="footer">
	<div class="social-links">
		<a href="https://github.com/avinight" target="_blank" rel="noopener noreferrer" aria-label="GitHub">
			<Icon name="simple-icons:github" class="icon" />
		</a>
		<a href="https://linkedin.com/in/friedrice123" target="_blank" rel="noopener noreferrer" aria-label="LinkedIn">
			<Icon name="simple-icons:linkedin" class="icon" />
		</a>
		<a href="https://instagram.com/_.friedrice" target="_blank" rel="noopener noreferrer" aria-label="Instagram">
			<Icon name="simple-icons:instagram" class="icon" />
		</a>
		<a href="mailto:friedricemm@gmail.com" aria-label="Email">
			<Icon name="lucide:mail" class="icon" />
		</a>
	</div>
	<p>&copy; 2025 Frederick Meneses. All rights reserved.</p>
</footer>

<style>
    .footer {
        font-family: Inter;
        margin-top: auto;
        padding: 2rem 1rem;
        text-align: center;
        border-top: 1px solid #e5e7eb;
        background-color: #FDF5E6;
        transition: background-color 0.3s ease, border-color 0.3s ease;
    }

    :global(.dark) .footer {
        background-color: #2c2c2c;
        border-top: 1px solid rgba(255, 255, 255, 0.2);
    }

    .social-links {
        display: flex;
        justify-content: center;
        gap: 1.5rem;
        margin-bottom: 1rem;
    }

    .social-links a {
        color: #6b7280;
        transition: color 0.2s ease;
    }

    .social-links a:hover {
        color: #374151;
    }

    :global(.dark) .social-links a {
        color: #d0d0d0;
    }

    :global(.dark) .social-links a:hover {
        color: #f5f5dc;
    }

    .icon {
        width: 1.5rem;
        height: 1.5rem;
    }

    .footer p {
        margin: 0;
        color: #6b7280;
        font-size: 0.875rem;
    }

    :global(.dark) .footer p {
        color: #d0d0d0;
    }
</style>
